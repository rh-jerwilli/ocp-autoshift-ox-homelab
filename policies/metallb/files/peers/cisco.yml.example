# This is an example BGP peer configuration and does not get applied to the cluster
# Add the name of this file to the metallb-peer-* value to apply this configuration
# If you name this file "internal.yaml", your value should be metallb-bgp-*: 'internal'
apiVersion: metallb.io/v1beta2
kind: BGPPeer
metadata:
  name: cisco-router
  namespace: metallb-system
spec:
  myASN:             # ASN for your OCP cluster, you set this yourself
  peerASN:            # ASN of your router/peer /// show ip bgp summary (cisco) - show configuration protocols bgp (juniper)
  peerAddress:   # IP of router
  peerPort: 179
  nodeSelectors:
    - matchLabels:
        kubernetes.io/hostname:  # Hostname of node to point this peer to
